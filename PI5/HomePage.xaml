<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PI5.HomePage"
             Title="Home"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Página Principal" 
                        FontSize="24" 
                        Padding="10"
                        FontAttributes="Bold"
                        TextColor="#007bff"
                        HorizontalOptions="Center" />

            <Frame CornerRadius="16" Padding="0" HasShadow="True" BackgroundColor="#ffffff">
                <VerticalStackLayout Padding="25" Spacing="15" VerticalOptions="Center">
                    <Image Source="logo.png"
                           HeightRequest="120"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />

                    <Label Text="Bem-vindo ao aplicativo!"
                           FontSize="20"
                           TextColor="#333"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0" />

                    <Label Text="Aqui você pode acessar as principais funcionalidades do sistema."
                           FontSize="16"
                           TextColor="#555"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>