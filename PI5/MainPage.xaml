<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PI5.MainPage"
             Title="Login"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <Grid Padding="30" RowSpacing="20" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*">
            <StackLayout Grid.Row="0" Spacing="20" Margin="0,0,0,20">
                <Label Text="Bem-vindo ao GlicGuard" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="#333"
                       HorizontalOptions="Center" />
                <Image Source="logo.png" 
                       HeightRequest="120" 
                       HorizontalOptions="Center" />
            </StackLayout>

            <Label Grid.Row="1" 
                   Text="Entre com sua conta" 
                   FontSize="18"
                   TextColor="#555"
                   HorizontalOptions="Center"/>

            <Frame Grid.Row="2" 
                   Padding="10" 
                   BackgroundColor="White" 
                   BorderColor="#ddd"
                   CornerRadius="5"
                   HasShadow="True">
                <StackLayout Spacing="10">
                    <Label Text="Email" 
                           FontSize="14" 
                           TextColor="#555"/>
                    <Entry x:Name="EmailEntry" 
                           Placeholder="Seu email"
                           PlaceholderColor="#ccc"
                           Keyboard="Email"/>
                </StackLayout>
            </Frame>

            <Frame Grid.Row="3" 
                   Padding="10" 
                   BackgroundColor="White" 
                   BorderColor="#ddd"
                   CornerRadius="5"
                   HasShadow="True">
                <StackLayout Spacing="10">
                    <Label Text="Senha" 
                           FontSize="14" 
                           TextColor="#555"/>
                    <Entry x:Name="SenhaEntry" 
                           Placeholder="Sua senha" 
                           IsPassword="True"
                           PlaceholderColor="#ccc"/>
                </StackLayout>
            </Frame>

            <Button Grid.Row="4"
                    x:Name="LoginButton"
                    Text="Entrar" 
                    BackgroundColor="#007bff" 
                    TextColor="White"  
                    FontSize="18" 
                    CornerRadius="5"
                    Margin="0,10,0,10"
                    Clicked="OnLoginButtonClicked" />

            <ActivityIndicator Grid.Row="4" 
                               x:Name="LoadingIndicator"
                               IsRunning="false"
                               IsVisible="false"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Color="#007bff"
                               Margin="0,10,0,0"/>

            <Label Grid.Row="5"
                   Text="Esqueceu sua senha?"
                   TextColor="#007bff"
                   FontSize="14"
                   HorizontalOptions="Center">
            </Label>

            <StackLayout Grid.Row="6" 
                         Orientation="Horizontal" 
                         HorizontalOptions="Center"
                         Spacing="5">
                <Label Text="NÃ£o tem uma conta?" 
                       FontSize="14" 
                       TextColor="#555" 
                       VerticalOptions="Center"/>
                <Label Text="Cadastre-se aqui" 
                       FontSize="14" 
                       TextColor="#007bff" 
                       FontAttributes="Bold" 
                       VerticalOptions="Center">
                </Label>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>