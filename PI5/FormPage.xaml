<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PI5.FormPage"
             Title="Formulário">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Formulário" 
                   FontSize="24" 
                   Padding="10"
                   FontAttributes="Bold"
                   TextColor="#007bff"
                   HorizontalOptions="Center" />

            <Entry x:Name="PregEntry"
                   Keyboard="Numeric"
                   Placeholder="Número de vezes grávida" />

            <Entry x:Name="PlasEntry"
                   Keyboard="Numeric"
                   Placeholder="Concentração de glicose plasmática" />

            <Entry x:Name="PresEntry"
                   Keyboard="Numeric"
                   Placeholder="Pressão arterial diastólica" />

            <Entry x:Name="SkinEntry"
                   Keyboard="Numeric"
                   Placeholder="Espessura da dobra cutânea do tríceps" />

            <Entry x:Name="InsuEntry"
                   Keyboard="Numeric"
                   Placeholder="Nível de insulina" />

            <Entry x:Name="MassEntry"
                   Keyboard="Numeric"
                   Placeholder="Índice de massa corporal" />

            <Entry x:Name="PediEntry"
                   Keyboard="Numeric"
                   Placeholder="Função pedigree de diabetes" />

            <Entry x:Name="AgeEntry"
                   Keyboard="Numeric"
                   Placeholder="Idade" />

            <Button Text="Enviar"
                    x:Name="SubmitButton"
                    Clicked="OnSubmitClicked"
                    BackgroundColor="#007bff"
                    TextColor="White"
                    CornerRadius="8"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>